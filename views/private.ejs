              <li><a href="#">Contact</a></li>
            </ul>
            <% if(!user){ %>
              <ul class="nav navbar-nav navbar-right">
                <li><a href="/login">Login</a></li>
                <li><a href="/users/register">Register</a></li>
              </ul>
            <% } else {%>
              <ul class="nav navbar-nav navbar-right">
                <li><a>Hello, <%=user.email %></a></li>
                <li><a href="/logout">Logout</a></li>
              </ul>
            <% } %>
          </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
      </nav>
    <div class='container'>
      <%- body %>
    </div>
